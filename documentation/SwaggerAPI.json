  "components": {
    "schemas": {
      "ErrorResponseCustom": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "ValidationErrorResponseCustom": {
        "type": "object",
        "properties": {
          "violations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Violation"
            }
          }
        }
      },
      "Violation": {
        "type": "object",
        "properties": {
          "fieldName": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "User": {
        "required": [
          "login",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "User ID, generated by the DataBase",
            "format": "int64",
            "example": 1
          },
          "email": {
            "type": "string",
            "example": "nickname@mail.com"
          },
          "login": {
            "pattern": "[^ ]*",
            "type": "string",
            "description": "Login may not be empty and may not contain space symbols",
            "example": "YourNickname"
          },
          "name": {
            "type": "string",
            "description": "Displayed name. May not be empty",
            "example": "Firstname Lastname"
          },
          "birthday": {
            "type": "string",
            "description": "Birthday may not be in future. Date format: YYYY-MM-DD",
            "format": "date",
            "example": "1946-08-20"
          },
          "friendsIds": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          }
        }
      },
      "Author": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Hope Heavens"
          }
        }
      },
      "Book": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Book name may not be empty or blank",
            "example": "Poetriana"
          },
          "description": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string",
            "example": "My own poetry book"
          },
          "releaseDate": {
            "type": "string",
            "format": "date",
            "example": "2007-05-27"
          },
          "numberOfPages": {
            "type": "integer",
            "format": "int32",
            "example": 100
          },
          "genres": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Genre"
            }
          },
          "rate": {
            "type": "integer",
            "format": "int32"
          },
          "likes": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          },
          "authors": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Author"
            }
          }
        }
      },
      "Genre": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Поэзия"
          }
        }
      }
    }
  }
